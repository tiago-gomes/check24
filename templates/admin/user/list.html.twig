{% extends 'admin.html.twig' %}

{% block content %}
    <div class="table-responsive">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <h2>Available User</h2>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <td>firstName</td>
                    <td>lastName</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                {% for item in user %}
                    <tr>
                        <td>{{ item.firstName }}</td>
                        <td>{{ item.lastName }}</td>
                        <td>
                            <p><a href="/admin/user/view/{{ item.id }}">Edit</a></p>
                            <p><a href="/admin/user/delete/{{ item.id }}">Delete</a></p>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
        <a class="btn btn-primary" href="/admin/user/add">Create new user</a>
    </div>
{% endblock %}